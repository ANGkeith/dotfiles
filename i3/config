# }
# bindsym $mod+r mode "resize"

# Show caps
mode "caps" {
        bindsym Caps_Lock mode "default"
}
bindsym Caps_Lock mode "caps"


# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 # decrease screen brightness
bindsym --release Print exec gnome-screenshot -ac
bindsym --release $mod+Print exec ~/.config/i3/scripts/screenshot

bindsym $mod+d exec dmenu_run
# bindsym $mod+d exec --no-startup-id rofi -show run
bindsym $mod+backslash exec --no-startup-id i3lock -c 000000

# Alt-tab like behaviour for workspace
workspace_auto_back_and_forth yes

#################################################################### Autostart services
# This is needed for google-chrome

exec_always --no-startup-id feh --bg-scale ~/Pictures/wallpaper.jpg
exec_always --no-startup-id setxkbmap -option caps:swapescape
exec_always --no-startup-id echo 0 | sudo tee /sys/module/hid_apple/parameters/fnmode
exec_always --no-startup-id compton

exec --no-startup-id /usr/bin/gnome-keyring-daemon --start --components=secrets
exec --no-startup-id i3-msg 'exec workspace $ws2; exec google-chrome --password-store=gnome'

# turn off display after 60s
exec xset dpms 0 0 3600
# auto lock in 1 minute
exec xautolock -time 10 -locker "i3lock -c 000000"

########## Assigning an application to a workspace
# run xprop on terminal to get class of an application
assign [class="Postman"] $ws4

font pango:Misc Termsyn 14

set $TEXT_COLOR "#cecece"
set $ACTIVE_BORDER_COLOR "#cecece"
set $ACTIVE_BG "#9575cd"
set $NO_COLOR "argb:00000000"
set $INACTIVE_BG_COLOR "#212121"
set $NO_COLOR "argb:00000000"

set $FOCUS_BG_COLOR "#cecece"

set $ERR_COLOR "#00ff00"
set $NOTIF_BG_COLOR="argb:ee212121"
set $BORDER_COLOR "#0d1010"

#                       border  bg      text    indicator
client.focused_inactive $BORDER_COLOR $INACTIVE_BG_COLOR $TEXT_COLOR $NO_COLOR
client.unfocused        $BORDER_COLOR $INACTIVE_BG_COLOR $TEXT_COLOR $NO_COLOR
client.focused          $BORDER_COLOR $FOCUS_BG_COLOR $INACTIVE_BG_COLOR $NO_COLOR
client.urgent           #ff0000 #ff0000 #d9d9d9 #00ff00

client.placeholder $ERR_COLOR $ERR_COLOR $ERR_COLOR $ERR_COLOR

bar {
    bindsym --release button3 exec --no-startup-id gnome-screenshot -ac
    font pango:DejaVu Sans Mono, FontAwesome 12
    status_command i3status-rs ~/.config/i3/statusbar.toml
    position top
    colors {
        separator #666666
        background #222222
        statusline #dddddd
        focused_workspace #0088CC #0088CC #ffffff
        active_workspace #333333 #333333 #ffffff
        inactive_workspace #333333 #333333 #888888
        urgent_workspace #2f343a #900000 #ffffff
    }
}

# hide window title bar
for_window [class=".*"] border pixel 1

bindsym $mod+Shift+plus gaps inner current plus 1
bindsym $mod+minus gaps inner current minus 1
bindsym $mod+plus gaps inner current set 3; gaps outer current set 3

gaps inner 6
gaps outer 6

